package com.strangeone101.elementumbot.ai.tasks;

import org.bukkit.util.BukkitRunnable;
import org.bukkit.Bukkit;

public class PlayTitleUpdater extends BukkitRunnable {
    public PlayTitleUpdater() {
        this.runTaskTimer(20 * 30, 1L, AlterEgoPlugin.INSTANCE);
    }
    
    @Override
    public void run() {
        AlterEgoPlugin.INSTANCE.API.setPlayingGame("Elementum | " + Bukkit.getOnlinePlayers().size() + " online");
    }
} 
